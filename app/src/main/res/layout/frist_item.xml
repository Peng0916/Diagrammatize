<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="240dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="165dp"
        android:layout_height="220dp">

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/rl_img_1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/a" />

            <TextView
                android:id="@+id/rl_tv_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_img_1"
                android:text="《完美世界》"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/rl_tv_controle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_tv_name1"
                android:layout_above="@+id/rl_ll_1"
                android:maxLines="2"
                android:text="分手危机，小天使的转机？小天使的转机？小天使的转机？小天使的转机？小天使的转机？小天使的转机？小天使的转机？"/>

            <LinearLayout
                android:id="@+id/rl_ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/rl_ll_tv_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="辰东"/>
                <TextView
                    android:id="@+id/rl_ll_tv_poplenub1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1200"/>
                <TextView
                    android:id="@+id/rl_ll_tv_lovenub1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="30"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="165dp"
        android:layout_height="220dp"
        android:layout_marginLeft="10dp">

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/rl_img_2"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/d" />

            <TextView
                android:id="@+id/rl_tv_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_img_2"
                android:text="《完美世界》"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/rl_tv_controle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_tv_name2"
                android:layout_above="@+id/rl_ll_2"
                android:maxLines="2"
                android:text="分手危机，小天使的转机？小天使的转机？小天使的转机？小天使的转机？小天使的转机？小天使的转机？小天使的转机？"/>

            <LinearLayout
                android:id="@+id/rl_ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/rl_ll_tv_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="辰东"/>
                <TextView
                    android:id="@+id/rl_ll_tv_poplenub2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1200"/>
                <TextView
                    android:id="@+id/rl_ll_tv_lovenub2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="30"/>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>